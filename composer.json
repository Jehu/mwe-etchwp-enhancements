{
    "name": "mwe/etchwp-enhancements",
    "description": "Enhances the Etch page builder with improved image handling and focus position support",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^2.0",
        "brain/monkey": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "MWE\\EtchWP_Enhancements\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MWE\\EtchWP_Enhancements\\Tests\\": "tests/phpunit/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html tests/coverage"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
